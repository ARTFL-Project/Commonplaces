<!DOCTYPE html>
<html ng-app="DiggingApp">
<head>
  <base href="/">
  <title>Digging Into Data</title>
      <link href="http://fonts.googleapis.com/css?family=Roboto:400,300,300italic,400italic,700,700italic&subset=latin,cyrillic-ext,greek-ext,greek,latin-ext,cyrillic" rel="stylesheet">
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
   <link rel="stylesheet" href="css/style.css">
</head>

<body>
  <div class="container-fluid" ng-controller="MainController as main">

    <!--Search form-->
    <form id="search-form" class="panel panel-default" ng-submit="main.submit()" ng-class="{'up': main.hideForm}">
      <img src="img/logo.png" alt="Digging Into Data logo" style="width: 55px; height: 30px">
      <div class="row">
        <div class="col-xs-12 col-sm-6">
          <div class="row search-field">
            <div class="col-xs-12 col-sm-2">
                Author:
             </div>
             <div class="col-xs-12 col-sm-10">
               <input type="text" class="form-control" ng-model="main.formData.sourceauthor">
             </div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6">
          <div class="row search-field">
            <div class="col-xs-12 col-sm-2">
                Title:
             </div>
             <div class="col-xs-12 col-sm-10">
               <input type="text" class="form-control" ng-model="main.formData.sourcetitle">
             </div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6">
          <div class="row search-field">
            <div class="col-xs-12 col-sm-2">
                Date:
             </div>
             <div class="col-xs-12 col-sm-10">
               <input type="text" class="form-control" ng-model="main.formData.sourcedate">
             </div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6">
          <div class="row search-field">
            <div class="col-xs-12 col-sm-2">
                Passage ID:
             </div>
             <div class="col-xs-12 col-sm-10">
               <input type="text" class="form-control" ng-model="main.formData.passageident">
             </div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6">
          <div id="show-form">
            <span class="btn btn-primary pull-left" ng-click="main.toggleForm()">{{ main.formToggleText }}</span>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6">
          <div class="search-field" ng-if="!main.hideForm">
            <button type="submit" class="btn btn-primary pull-right">Search</button>
          </div>
        </div>
      </div>
    </form>
    <!--End of search form-->

    <div ng-view></div>

  </div>

  <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/jquery-ui.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular-route.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular-resource.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular-route.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular-animate.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular-touch.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular-sanitize.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular-cookies.min.js"></script>
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <script src="bower_components/spin.js/spin.js"></script>
  <script src="bower_components/angular-spinner/angular-spinner.js"></script>
  <script src="//cdn.jsdelivr.net/velocity/1.2.2/velocity.min.js"></script>
  <script src="//cdn.jsdelivr.net/velocity/1.2.2/velocity.ui.min.js"></script>
  <script src="bower_components/ngInfiniteScroll/build/ng-infinite-scroll.min.js"></script>
  <script src="app.js"></script>
  <script src="services.js"></script>
  <script src="filters.js"></script>
  <script src="digging.routes.js"></script>
  <script src="components/mainResults/resultsController.js"></script>
  <script src="components/mainResults/mainResultsDirective.js"></script>
</body>
</html>
